[Unit]
Description=mattermost
<% if @mattermost::depend_service != '' -%>
After=syslog.target network.target <%= @mattermost::depend_service %>.service
Requires=<%= @mattermost::depend_service %>.service
<% else -%>
After=syslog.target network.target
<% end -%>

[Service]
Type=simple
WorkingDirectory=<%= @mattermost::symlink %>
User=<%= @mattermost::user %>
ExecStart=<%= @mattermost::symlink %>/bin/platform
PIDFile=/var/spool/mattermost/pid/master.pid

[Install]
WantedBy=multi-user.target
